{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Dossier",
  "version": "2.0.0",
  "identifier": "com.dossier.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "decorations": false,
        "title": "Dossier",
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true,
        "visible": true,
        "alwaysOnTop": true,
        "width": 800,
        "height": 600,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "Dossier Settings",
        "url": "/settings",
        "width": 900,
        "height": 600,
        "resizable": true,
        "center": true,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

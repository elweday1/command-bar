{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "command-bar",
  "version": "2.0.0",
  "identifier": "com.command-bar.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "decorations": false,
        "title": "Command Bar",
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        
        "center": true,
        "skipTaskbar": true,
        "visible": true,
        "alwaysOnTop": true,
        "width": 800,
        "height": 600,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
